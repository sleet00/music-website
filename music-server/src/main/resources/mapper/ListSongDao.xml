<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxc.music.dao.ListSongDao">

    <resultMap type="com.hxc.music.entity.ListSong" id="ListSongMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="songId" column="song_id" jdbcType="INTEGER"/>
        <result property="songListId" column="song_list_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ListSongMap">
        select
          id, song_id, song_list_id
        from list_song
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ListSongMap">
        select
        id, song_id, song_list_id
        from list_song
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="songId != null">
                and song_id = #{songId}
            </if>
            <if test="songListId != null">
                and song_list_id = #{songListId}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from list_song
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="songId != null">
                and song_id = #{songId}
            </if>
            <if test="songListId != null">
                and song_list_id = #{songListId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into list_song(song_id, song_list_id)
        values (#{songId}, #{songListId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into list_song(song_id, song_list_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.songId}, #{entity.songListId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into list_song(song_id, song_list_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.songId}, #{entity.songListId})
        </foreach>
        on duplicate key update
        song_id = values(song_id),
        song_list_id = values(song_list_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update list_song
        <set>
            <if test="songId != null">
                song_id = #{songId},
            </if>
            <if test="songListId != null">
                song_list_id = #{songListId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from list_song where id = #{id}
    </delete>

</mapper>

