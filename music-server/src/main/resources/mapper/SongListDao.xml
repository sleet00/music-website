<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxc.music.dao.SongListDao">

    <resultMap type="com.hxc.music.entity.SongList" id="SongListMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="pic" column="pic" jdbcType="VARCHAR"/>
        <result property="introduction" column="introduction" jdbcType="LONGVARCHAR"/>
        <result property="style" column="style" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SongListMap">
        select
          id, title, pic, introduction, style
        from song_list
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SongListMap">
        select
        id, title, pic, introduction, style
        from song_list
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="pic != null and pic != ''">
                and pic = #{pic}
            </if>
            <if test="introduction != null and introduction != ''">
                and introduction = #{introduction}
            </if>
            <if test="style != null and style != ''">
                and style = #{style}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from song_list
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="pic != null and pic != ''">
                and pic = #{pic}
            </if>
            <if test="introduction != null and introduction != ''">
                and introduction = #{introduction}
            </if>
            <if test="style != null and style != ''">
                and style = #{style}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into song_list(title, pic, introduction, style)
        values (#{title}, #{pic}, #{introduction}, #{style})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into song_list(title, pic, introduction, style)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.pic}, #{entity.introduction}, #{entity.style})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into song_list(title, pic, introduction, style)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.pic}, #{entity.introduction}, #{entity.style})
        </foreach>
        on duplicate key update
        title = values(title),
        pic = values(pic),
        introduction = values(introduction),
        style = values(style)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update song_list
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="pic != null and pic != ''">
                pic = #{pic},
            </if>
            <if test="introduction != null and introduction != ''">
                introduction = #{introduction},
            </if>
            <if test="style != null and style != ''">
                style = #{style},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from song_list where id = #{id}
    </delete>

</mapper>

